<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="#CCE5FF"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/ware_house_list_row_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        tools:text="@string/add_new_item"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ware_house_list_row_item_name"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/ware_house_list_row_item_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="category"
            />
        <TextView
            android:id="@+id/ware_house_list_row_item_manufacturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            tools:text="@string/manufacturer_name"
            />
        <TextView
            android:layout_marginStart="20dp"
            android:id="@+id/ware_house_list_row_item_http_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/availability"
            />
        <TextView
            android:layout_marginStart="20dp"
            android:id="@+id/ware_house_list_row_item_availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/http_code"
            />

    </LinearLayout>
</RelativeLayout>